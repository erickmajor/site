.input-group
  position relative
  padding 0
  overflow visible
  display inline-block

  .input-field
    width 100%
    padding 12px 10px 8px
    border-top none
    border-left none
    border-right none
    border-radius 0
    box-shadow none
    font-size 15px
    outline none
    cursor text
    background transparent
    font-weight 300

  .input-label
    position absolute
    top 10px
    font-weight 300
    left 10px
    font-size 15px
    transform-origin 0 -150%
    transition transform 300ms ease
    pointer-events none

  .input-field:focus ~ .input-label,
  .input-field:valid ~ .input-label
    transform scale(0.6)